set -euxo pipefail

cd

if ! [ -d github/bash-tools ]; then
    mkdir -pv github
    pushd github
    git clone https://github.com/harisekhon/bash-tools
    popd
fi

cd github/bash-tools

git pull

make gcp-cloudshell
